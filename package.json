{
  "name": "accounting-firm",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "pnpm run next-dev",
    "next-dev": "next dev",
    "build": "bash scripts/check-required-envs.sh && prisma generate && pnpm lint && pnpm typecheck && next build",
    "build:skip-env": "SKIP_ENV_VALIDATION=true bash scripts/check-required-envs.sh && prisma generate && next build",
    "typecheck": "prisma generate && tsc --noEmit -p tsconfig.build.json",
    "lint:semgrep": "semgrep --config semgrep/edge-node-imports.yml || true",
    "start": "next build && next start",
    "lint": "eslint . --ext .js,.ts,.tsx --fix",
    "test": "vitest --run",
    "prebuild": "pnpm test:thresholds",
    "check:env": "bash scripts/check-required-envs.sh",
    "check:rbac": "node scripts/rbac.js --check",
    "audit:rbac": "node scripts/rbac.js --audit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:migrate:legalLinks": "tsx scripts/migrate-legal-links-to-columns.ts",
    "db:rls:enable": "tsx scripts/setup-rls.ts",
    "db:rls:auto": "tsx scripts/rls-rollout.ts --phase auto --verify",
    "test:thresholds": "vitest run tests/thresholds.test.ts",
    "test:tenant": "vitest run tests/tenant-filter.test.ts",
    "test:integration": "vitest --run --reporter dot --threads false tests/integration",
    "test:integration:serial": "vitest --run --reporter dot --threads false tests/integration",
    "test:e2e": "playwright test",
    "e2e:ci": "bash e2e/run-e2e.sh",
    "vercel:build": "SENTRY_AUTH_TOKEN='' sh -lc \"pnpm db:generate && pnpm lint && pnpm typecheck && pnpm build\"",
    "monitoring:setup": "node scripts/production-monitoring.js",
    "monitoring:health": "node scripts/health-check.js",
    "production:deploy": "pnpm monitoring:setup && pnpm vercel:build",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "check:duplicates": "node scripts/ci/check-duplicate-api-routes.js && node scripts/ci/check-critical-duplicates.js",
    "validate:stateful-docs": "node scripts/verify_stateful_docs.js",
    "db:migrate:profile-prefs": "tsx scripts/migrate-booking-preferences-to-user-profile.ts",
    "db:rollback:profile-prefs": "tsx scripts/rollback-user-profile-preferences.ts",
    "discover:keys": "tsx scripts/discover-translation-keys.ts",
    "test:i18n": "tsx scripts/test-i18n.ts"
  },
  "dependencies": {
    "@dnd-kit/accessibility": "^3.1.0",
    "@dnd-kit/core": "^6.0.0",
    "@dnd-kit/sortable": "^7.0.0",
    "@dnd-kit/utilities": "^3.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@netlify/functions": "^2.8.1",
    "@netlify/neon": "^0.1.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.18.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-toast": "^1.2.15",
    "@sendgrid/mail": "^8.1.5",
    "@sentry/nextjs": "^8.55.0",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "file-type": "^18.7.0",
    "framer-motion": "^11.18.2",
    "fuse.js": "^6.6.2",
    "i18n-iso-countries": "^7.14.0",
    "import-in-the-middle": "*",
    "ioredis": "^5.7.0",
    "lucide-react": "^0.546.0",
    "luxon": "^3.5.0",
    "next": "15.5.4",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "pg": "^8.12.0",
    "prisma": "^6.15.0",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.64.0",
    "require-in-the-middle": "*",
    "sonner": "^2.0.7",
    "stripe": "^19.1.0",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "xml-js": "^1.6.11",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@netlify/plugin-nextjs": "5.14.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24",
    "@types/pg": "^8.11.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.14",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vitest": "^0.34.0"
  },
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34"
}
